<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="edit-list">
<%= form_with model: @book do |f| %>

<div class="edit-main">
<h4>Title</h4>
<%= f.text_field :title %>
</div>

<div class="edit-main">
<h4>Body</h4>
<%= f.text_area :body %>
</div>

<div class="edit-main">
<div class="book-submit">
<%= f.submit 'Update Book'%>
</div>
</div>

<div class="edit-main">
<%= link_to "show", book_path(@book.id) %> | <a href="/books">Back</a>
</div>

<% end %>
</div>
